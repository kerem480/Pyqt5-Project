        self.login_button.clicked.connect(self.firstwin)


    def firstwin(self):
        self.Username=self.Username.text()
        self.Password=self.Password.text()
        if self.Username != "kerem" or self.Password != "1234":
            print("Kullanıcı Adınız veya Şifreniz Yanlış Lütfen Emin Olunuz")
        else:
            print("Giriş Başarılı!!!")
    def secondwin(self):
        self.MainWindow = QtWidgets.QMainWindow()
        self.ui = Ui_MainWindows()
        self.ui.setupUi(self.MainWindow)
        self.MainWindow.show()
        MainWindow.hide()


    def retranslateUi(self, MainWindow):
        _translate = QtCore.QCoreApplication.translate
        MainWindow.setWindowTitle(_translate("MainWindow", "MainWindow"))
        self.label.setText(_translate("MainWindow", "Kullanıcı Adı"))
        self.label_2.setText(_translate("MainWindow", "Şifre"))
        self.login_button.setText(_translate("MainWindow", "Giriş"))
        self.NewAccount.setText(_translate("MainWindow", "Yeni Hesap Oluştur"))
        self.toolBar.setWindowTitle(_translate("MainWindow", "toolBar"))


if __name__ == "__main__":
    import sys
