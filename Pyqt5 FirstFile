        self.Confirmbutt.clicked.connect(self.createFunction)



    def createFunction(self):
        self.Username2=self.Username2.text()
        if self.Password2.text()==self.Confirmpass.text():
            self.Password2=self.Password2.text()
            print("Hesap Oluşturuldu!!!" ,"Kullanıcı Adınız: ",self.Username2,"Şifreniz: ",self.Password2)
        else:
            print("Lütfen Şifrenizi Doğru Giriniz")



    def retranslateUi(self, MainWindow):
        _translate = QtCore.QCoreApplication.translate
        MainWindow.setWindowTitle(_translate("MainWindow", "MainWindow"))
        self.label.setText(_translate("MainWindow", "Kullanıcı Adı"))
        self.label_2.setText(_translate("MainWindow", "Şifre"))
        self.label_3.setText(_translate("MainWindow", "Şifre Onayla"))
        self.Confirmbutt.setText(_translate("MainWindow", "Hesabı Oluştur"))
        self.toolButton.setText(_translate("MainWindow", "Giriş"))
        self.toolBar.setWindowTitle(_translate("MainWindow", "toolBar"))


